{
    "name": "pulse-work",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "prepare": "husky || true",
        "dev": "next dev --turbopack",
        "build": "next build --turbopack",
        "build:analyze": "ANALYZE=true next build",
        "start": "next start",
        "auto": "pnpm install && pnpm db:setup && pnpm prisma:generate && pnpm prisma:deploy && pnpm fixtures:setup && pnpm dev",
        "auto:start": "pnpm install && pnpm db:setup && pnpm prisma:generate && pnpm prisma:deploy && pnpm fixtures:setup && pnpm build && pnpm start",
        "lint": "eslint",
        "lint:fix": "eslint . --fix",
        "format": "prettier . --check",
        "format:fix": "prettier . --write",
        "type": "tsc --noEmit",
        "checks": "pnpm lint && pnpm format && pnpm type",
        "test:run": "vitest run",
        "test:watch": "vitest",
        "db:setup": "./scripts/db.sh setup",
        "db:reset": "./scripts/db.sh reset",
        "db:reload": "./scripts/db.sh reload",
        "db:execute": "./scripts/db.sh execute",
        "prisma:generate": "pnpm dlx prisma generate",
        "prisma:migrate": "pnpm dlx prisma migrate dev",
        "prisma:deploy": "pnpm dlx prisma migrate deploy",
        "prisma:reset": "pnpm dlx prisma migrate reset",
        "prisma:studio": "pnpm dlx prisma studio",
        "fixtures:setup": "tsx scripts/fixtures.ts setup",
        "fixtures:reset": "tsx scripts/fixtures.ts reset",
        "fixtures:reload": "tsx scripts/fixtures.ts reload",
        "generate:list": "tsx scripts/generator.ts list",
        "generate:clear": "tsx scripts/generator.ts clear",
        "generate:all": "tsx scripts/generator.ts all"
    },
    "dependencies": {
        "@prisma/client": "6.16.2",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-tooltip": "^1.2.8",
        "dayjs": "^1.11.18",
        "next": "15.6.0-canary.57",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "tsx": "^4.20.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@commitlint/types": "^19.8.1",
        "@eslint/eslintrc": "^3.3.1",
        "@headlessui/react": "^2.2.9",
        "@internationalized/date": "^3.10.0",
        "@next/bundle-analyzer": "^15.5.4",
        "@next/eslint-plugin-next": "^15.5.4",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-popover": "^1.1.15",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-switch": "^1.2.6",
        "@react-email/components": "0.5.6",
        "@react-email/render": "^1.3.2",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^11.0.6",
        "@tailwindcss/postcss": "^4.1.14",
        "@tanstack/react-table": "^8.21.3",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/leaflet": "^1.9.20",
        "@types/lodash": "^4.17.20",
        "@types/node": "^24.7.1",
        "@types/nodemailer": "^7.0.2",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.1",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "@vitejs/plugin-react": "^5.0.4",
        "better-auth": "^1.3.27",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "eslint": "^9.37.0",
        "eslint-config-next": "^15.5.4",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.23",
        "eslint-plugin-unused-imports": "^4.2.0",
        "handlebars": "^4.7.8",
        "husky": "^9.1.7",
        "jsdom": "^27.0.0",
        "leaflet": "^1.9.4",
        "lint-staged": "^16.2.3",
        "lodash": "^4.17.21",
        "lucide-react": "^0.544.0",
        "motion": "^12.23.24",
        "nanoid": "^5.1.6",
        "nodemailer": "^7.0.9",
        "nuqs": "^2.7.1",
        "postcss": "^8.5.6",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "prisma": "^6.17.1",
        "radix-ui": "^1.4.3",
        "react-aria-components": "^1.13.0",
        "react-day-picker": "^9.11.1",
        "react-leaflet": "^5.0.0",
        "recharts": "2.15.4",
        "semantic-release": "^24.2.9",
        "server-only": "^0.0.1",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.14",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3",
        "typescript-cookie": "^1.0.6",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4",
        "zod": "^4.1.12",
        "zustand": "^5.0.8"
    },
    "lint-staged": {
        "*.{js,ts,tsx}": "eslint --fix",
        "*.{js,ts,tsx,json,css,md,yml,yaml}": "prettier --write"
    }
}
